<UserControl x:Class="BMRM.Desktop.Views.Shell.ShellControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Name="ShellRoot">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF1E1E1E" Offset="0" />
            <GradientStop Color="#FF3B1F00" Offset="1" />
        </LinearGradientBrush>

        <Style x:Key="WindowControlButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#444444" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontFamily" Value="Segoe UI" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#666666" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border Background="{StaticResource MainBackgroundBrush}" CornerRadius="8" Padding="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> 
                <RowDefinition Height="*" />  
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Background="#2C2C2C" Height="40" MouseDown="TitleBar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Title, RelativeSource={RelativeSource AncestorType=UserControl}}"
                           Foreground="White" FontSize="14" VerticalAlignment="Center" Margin="12,0" />

                <StackPanel Orientation="Horizontal" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,8,0">
                    <Button Style="{StaticResource WindowControlButtonStyle}" Content="—" Click="Minimize_Click" />
                    <Button Style="{StaticResource WindowControlButtonStyle}" Content="▢" Click="Maximize_Click" />
                    <Button Style="{StaticResource WindowControlButtonStyle}" Content="✕" Click="Close_Click" />
                </StackPanel>
            </Grid>
            
            <ContentControl x:Name="PART_ContentHost" Grid.Row="1" />
        </Grid>
    </Border>
</UserControl>
